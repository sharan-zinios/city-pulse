# City Pulse Environment Configuration Template
# ===========================================
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3002
NODE_ENV=development

# Database Paths
DB_PATH=/path/to/your/local_incidents.db
AGENT_DB_PATH=/path/to/your/local_incidents.db

# Docker Database Paths (for containerized environment)
DOCKER_DB_PATH=/app/local_dev/local_incidents.db
DOCKER_AGENT_DB_PATH=/app/local_dev/local_incidents.db

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# CORS Configuration
CORS_ORIGIN=*

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# Monitoring Configuration
STATS_UPDATE_INTERVAL=2000
STATS_BROADCAST_INTERVAL=10000

# Agent Configuration
AGENT_POLL_INTERVAL=2000

# Data Generation Configuration (for simulator)
DATASET_FILE=/app/historical_incidents.json
BATCH_SIZE=7
BATCH_INTERVAL=20

# Logging Configuration
LOG_LEVEL=info
